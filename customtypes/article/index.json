{
  "id": "article",
  "label": "Article",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "URL slug for the article"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Title of the article",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "publishDate": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": "Date the article was published"
        }
      },
      "featuredImage": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 2000,
            "height": 1500
          },
          "thumbnails": []
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "author",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "image": {
              "type": "SharedSlice"
            },
            "quote": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "contact_form": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}